                  </table>
                  <br>
                  <br>
                  <div class="mb-3">
                        <h3 class="text-center text-uppercase">covide-19 updates India State</h3>

                  </div>
                  <table class=" table table-bordered table-striped text-center" id="state">
                        <tr>
                              <th>State</th>
                              <th>TotalConfirmed</th>
                              <th>TotalRecovered</th>
                              <th>TotalDeaths</th>
                              <th>NewConfirmed</th>
                              <th>NewRecovered</th>
                              <th>NewDeaths</th>
                              <th>TotalActive</th>
                        </tr>
                  </table>
            </div>
      </section>

      <script>
            function fetch() {
                  $.get("https://api.covid19api.com/summary",
                        (data) => {
                              // console.log(data.Countries[0].Country);
                              var tbval = document.getElementById('tbval');

                              for (var i = 1; i < 191; i++) {
                                    var x = tbval.insertRow();

                                    x.insertCell(0);
                                    tbval.rows[i].cells[0].innerHTML = data.Countries[i].Country;
                                    tbval.rows[i].cells[0].style.background = '#7a4a91';
                                    tbval.rows[i].cells[0].style.color = '#fff';

                                    x.insertCell(1);
                                    tbval.rows[i].cells[1].innerHTML = data.Countries[i].TotalConfirmed;
                                    tbval.rows[i].cells[1].style.background = '#4bb7d8';

                                    x.insertCell(2);
                                    tbval.rows[i].cells[2].innerHTML = data.Countries[i].TotalRecovered;
                                    tbval.rows[i].cells[2].style.background = '#4bb7d8';

                                    x.insertCell(3);
                                    tbval.rows[i].cells[3].innerHTML = data.Countries[i].TotalDeaths;
                                    tbval.rows[i].cells[3].style.background = '#f36e23';

                                    x.insertCell(4);
                                    tbval.rows[i].cells[4].innerHTML = data.Countries[i].NewConfirmed;
                                    tbval.rows[i].cells[4].style.background = '#4bb7d8';

                                    x.insertCell(5);
                                    tbval.rows[i].cells[5].innerHTML = data.Countries[i].NewRecovered;
                                    tbval.rows[i].cells[5].style.background = '#9cc850';

                                    x.insertCell(6);
                                    tbval.rows[i].cells[6].innerHTML = data.Countries[i].NewDeaths;
                                    tbval.rows[i].cells[6].style.background = '#f36e23';

                                    x.insertCell(7);
                                    tbval.rows[i].cells[7].innerHTML = data.Countries[i].Date;
                                    tbval.rows[i].cells[7].style.background = '#9cc850';
                              }
                        }

                  );




                  $.get("https://api.covid19india.org/v2/state_district_wise.json",
                        (value) => {


                              var state = document.getElementById('state');

                              for (var i = 1; i <= value.length; i++) {

                                    var x = state.insertRow();
                                    var tConfirm = 0;
                                    var tRecover = 0;
                                    var tDeath = 0;
                                    var cConfirm = 0;
                                    var cRecover = 0;
                                    var cDeath = 0;
                                    var tActive = 0;

                                    for (var j = 0; j < value[i].districtData.length; j++) {
                                          tConfirm = tConfirm + value[i].districtData[i].confirmed;
                                          tRecover = tRecover + value[i].districtData[i].recovered;
                                          tDeath = tDeath + value[i].districtData[i].deceased;
                                          cConfirm = cConfirm + value[i].districtData[i].delta.confirmed;
                                          cRecover = cRecover + value[i].districtData[i].delta.recovered;
                                          cDeath = cDeath + value[i].districtData[i].delta.deceased;
                                          tActive = tActive + value[i].districtData[i].active;

                                    }
                                    x.insertCell(0);
                                    state.rows[i].cells[0].innerHTML = value[i].state;
                                    state.rows[i].cells[0].style.background = '#7a4a91';
                                    state.rows[i].cells[0].style.color = '#fff';

                                    x.insertCell(1);
                                    state.rows[i].cells[1].innerHTML = tConfirm;
                                    state.rows[i].cells[1].style.background = '#4bb7d8';

                                    x.insertCell(2);
                                    state.rows[i].cells[2].innerHTML = tRecover;
                                    state.rows[i].cells[2].style.background = '#4bb7d8';

                                    x.insertCell(3);
                                    state.rows[i].cells[3].innerHTML = tDeath;
                                    state.rows[i].cells[3].style.background = '#f36e23';

                                    x.insertCell(4);
                                    state.rows[i].cells[4].innerHTML = cConfirm;
                                    state.rows[i].cells[4].style.background = '#4bb7d8';

                                    x.insertCell(5);
                                    state.rows[i].cells[5].innerHTML = cRecover;
                                    state.rows[i].cells[5].style.background = '#9cc850';

                                    x.insertCell(6);
                                    state.rows[i].cells[6].innerHTML = cDeath;
                                    state.rows[i].cells[6].style.background = '#4bb7d8';

                                    x.insertCell(7);
                                    state.rows[i].cells[7].innerHTML = tActive;
                                    state.rows[i].cells[7].style.background = '#f36e23';
                              }
                        }

                  );
            }






















      </script>


